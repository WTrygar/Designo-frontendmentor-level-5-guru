---
import cssVars from "../styles/css-vars";

interface Props {
  title: string;
  imageUrl: string;
  img: string;
  buttonUrl: string;
}

const { title, imageUrl, img, buttonUrl } = Astro.props;
---

<div class="navigation-card">
  <h3 class="card-title">{title}</h3>
  <a href={buttonUrl}>VIEW PROJECTS</a>
</div>

<style define:vars={{ cssVars, image: `url("${img}")` }}>
  .navigation-card {
    background-image: var(--image);
    width: 90%;
    height: 300px;
    margin: 10px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 15px;
  }

  .navigation-card h3 {
    text-align: center;
    color: white;
  }

  .navigation-card a {
    text-decoration: none;
    color: white;
  }

  @media (min-width: 600px) and (max-width: 900px) {
    .navigation-card {
    height: 200px;
  }

  @media (min-width: 900px) {
  }
</style>
