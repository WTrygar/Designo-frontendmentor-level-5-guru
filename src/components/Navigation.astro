    all: unset;

    & > .bgrOpn {
      display: none;
    }
    &.open > .bgrOpn {
      display: initial;
    }
    &.open > .bgrCld {
      display: none;
    }
  } */

  /* .open {
    src: url("./src/assets/shared/mobile/icon-close.svg");
  } */
</style>
