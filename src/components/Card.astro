---
import cssVars from "../styles/css-vars";

interface Props {
  class: string;
  title: string;
  imageUrl: string;
  img: string;
  text: string;
}

const { class: className, title, imageUrl, img, text } = Astro.props;
---

<div class={className}>
  <div class="card-image">
    <img src={img} alt="card image" />
  </div>
  <h3 class="card-title">{title}</h3>
  <p>{text}</p>
</div>

<style define:vars={{ cssVars, image: `url("${img}")` }}>
  .first-card,
  .second-card,
  .third-card {
    width: 90%;
    height: 300px;
    margin: 10px 0;
    display: flex;
    flex-direction: column;
    justify-content: unset;
    align-items: center;
    border-radius: 15px;
    margin-top: 30px;
    margin-bottom: 30px;
  }

  .card-image {
    background-color: rgb(227, 227, 227);
    border-radius: 50%;
  }

  .card-image img {
    width: 10rem;
    height: 10rem;
  }

  @media (min-width: 600px) and (max-width: 900px) {
  }

  @media (min-width: 900px) {
  }
</style>
